<div class="page-header">
  <h1>
    Competencies
    <a href="/competencies/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>Competency Name</th>
              <th>Competency Description</th>
              <th>View/Add Competency Notes</th>
              <th>Edit Competency</th>
              <th>Delete Competency</th>
            </tr>
          </thead>
          <tbody>
          <% @competencies.each do |competency| %>
            <tr>
              <td><%= competency.comp_name %></td>
              <td><%= competency.comp_description %></td>
              <td>
                <a href="/competencies/<%= competency.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a></td>
              <td>
                <a href="/competencies/<%= competency.id %>/edit" class="btn btn-warning"><i class="fa fa-edit"></i></a></td>
              <td>
                <a href="/delete_competency/<%= competency.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o"></i></a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
